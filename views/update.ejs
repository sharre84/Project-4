<div class="container">
  <div class="row col-md-6 col-md-offset-3">
    <h1><%= user.local.name %></h1>
    <form action="<%= user._id %>" method="post">
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="local.name" value="<%= user.local.name %>">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="local.email" value="<%= user.local.email %>">
      </div>
      <input type="hidden" name="_method" value="PATCH">
      <button type="submit" class="btn btn-warning btn-sm">Submit</button>
      <a href="/profile" class="btn btn-default btn-sm">Cancel</a>
    </form>
  </div>
</div>
